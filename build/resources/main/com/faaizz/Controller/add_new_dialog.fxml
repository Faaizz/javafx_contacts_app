<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.faaizz.Controller.AddNewDialogController"
            stylesheets="@css/style.css"
>

    <headerText>
        Add New Contact
    </headerText>

    <content>

        <GridPane vgap="5" hgap="5">

            <!--ROW 0: NAME ROW-->
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameTF" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!--ROW 1: MOBILE ROW-->
            <Label text="Mobile:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="mobileTF" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!--ROW 2: PHONE ROW-->
            <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneTF" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!--ROW 3: EMAIL ROW-->
            <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="emailTF" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>

    </content>


</DialogPane>
